{
  "DataConnections": {
    "ConnectionString": "Server=Server=(localdb)\\mssqllocaldb;Database=QuizWizDb;Trusted_Connection=True;"
  },
  "CrossOriginConfig": [
    "http://localhost:4200"
  ],
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "path": "Logs/dev_job_resolver_api_.log",
          "rollingInterval": "Day"
        }
      }
    ],
    "Properties": {
      "Application": "WebApi"
    }
  },
  "AllowedHosts": "*"
}
